{
  "name": "node-direct",
  "version": "0.0.0-auto",
  "description": "A server which allows to run server-side JavaScript files via NodeJS as easy as PHP via Apache",
  "bin": "index.js",
  "scripts": {
    "test": "node test/test && eslint src test",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "check-updates": "ncu",
    "upgrade": "npm run check-updates -- --upgradeAll && npm install",
    "start": "nodemon index --standalone --ext=.srv.js",
    "prepublish": "npm run transpile",
    "transpile": "babel src -d ./"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/finom/node-direct.git"
  },
  "keywords": [
    "node"
  ],
  "config": {
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ]
    },
    "ghooks": {
      "commit-msg": "validate-commit-msg"
    }
  },
  "author": "Andrey Gubanov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/finom/node-direct/issues"
  },
  "homepage": "https://github.com/finom/node-direct#readme",
  "dependencies": {
    "body-parser": "^1.15.2",
    "express": "^4.14.0",
    "fresh-up": "0.0.3",
    "minimist": "^1.2.0",
    "path-exists": "^3.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-preset-es2015": "^6.16.0",
    "eslint": "^3.7.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-import": "^2.0.1",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.4.1",
    "expect.js": "^0.3.1",
    "ghooks": "^1.3.2",
    "nodemon": "^1.11.0",
    "npm-check-updates": "^2.8.5",
    "request": "^2.75.0",
    "semantic-release": "^4.3.5",
    "validate-commit-msg": "^2.8.2"
  }
}
